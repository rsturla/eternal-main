{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // Use the basic Renovate preset, and allow settings to be overridden
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      // Automatically update any GitHub Actions packages through minor and patch upgrades
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "pinDigest"
      ],
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      // Do not pin digest for jasonn3/build-container-installer GitHub Action
      "matchUpdateTypes": [
        "pin",
        "digest",
        "pinDigest"
      ],
      "matchPackageNames": [
        "jasonn3/build-container-installer"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "fileMatch": [
        "image-versions.yaml"
      ],
      "matchStrings": [
        "$map(images, function($v) { $map($v.versions, function($ver) { { \"depName\": $v.name, \"packageName\": $v.image, \"currentValue\": $ver.version, \"currentDigest\": $ver.digest } }) })"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}